<div class="page-sessions-new">
  <div class="authform">
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form'}) do |f| %>
      <h3>Sign in</h3>
      <%= devise_error_messages! %>
      <div class="row">
        <div class="form-group email-block col-sm-6 col-xs-12">
          <%= f.label :email %>
          <%= f.email_field :email, :autofocus => true, class: 'form-control' %>
        </div>
      </div>
      <div class="row">
        <div class="form-group col-sm-6 col-xs-12">
          <%= f.label :password %>
          <%= f.password_field :password, class: 'form-control' %>
        </div>
      </div>
      <div class="checkbox checkbox-block">
        <label>
          <%= f.check_box :remember_me, checked: true %> Remember me
        </label>
      </div>

      <%= f.submit 'Sign in', :class => 'btn btn-primary btn-lg' %>

    <% end %>
  </div>
  <div class="bottom-links-block">
    <%= link_to 'Sign up', new_registration_path(resource_name), class: 'right'  %>
    &nbsp; | &nbsp;
    <%= link_to "Forgot password?", new_password_path(resource_name), class: 'right' %>
  </div>
</div>
