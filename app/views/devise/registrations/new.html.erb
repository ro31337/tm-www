<div class="page-registrations-new">
  <div class="authform">
    <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :role => 'form'}) do |f| %>
      <h3>Sign up</h3>
      <!-- <%= devise_error_messages! %> -->
      <div class="form-group email-block">
        <%= f.label :email %>
        <%= f.email_field :email, :autofocus => true, class: 'form-control' %>
        <%= f.error :email %>
      </div>
      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control' %>
        <%= f.error :password %>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, class: 'form-control' %>
        <%= f.error :password_confirmation %>
      </div>
       <%= f.submit 'Sign up', :class => 'btn btn-primary btn-lg' %>
    <% end %>
  </div>
</div>
